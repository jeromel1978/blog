---
import Logo from "../images/JLlogo.svg";
import Index from "../components/Index.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={Logo} />
    <meta name="generator" content={Astro.generator} />
    <title>Jerome Losorata - {title}</title>
  </head>
  <body>
    <Index client:visible />
    <slot />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "HeaderFont";
    src: url("./fonts/Julius_Sans_One/JuliusSansOne-Regular.ttf");
    font-display: swap;
  }
  @font-face {
    font-family: "MainFont";
    src: url("./fonts/Archivo/Archivo-Regular.ttf") format("truetype");
    font-display: swap;
  }
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
    --icon-grow: 1.5;
    --icon-gap: 0.25;
    --icon-dim: clamp(1rem, 10vw, 2rem);
    --hs-size: clamp(7rem, 10vw, 15rem);
    --font-head-size: clamp(2rem, 10vw, 2.5rem);
    --font-main-size: clamp(1rem, 10vw, 1.5rem);
  }
  html {
    font-family: system-ui, sans-serif;
    background-color: #f6f6f6;
  }

  body {
    height: 100vh;
    width: 100vw;
    margin: 0px;
    top: 0px;
    left: 0px;
    font-family: "MainFont", "Arial", sans-serif;
    font-size: var(--font-main-size);
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
      monospace;
  }
</style>
